 
 
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- FontAwesome (replace kit with your key or use CDN) -->
  <script src="https://kit.fontawesome.com/yourfontawesomekit.js" crossorigin="anonymous"></script>

  <style>
    :root {
      --sidebar-width: 260px;
    }

    body { background: #f6f7fb; }

    /* ===== Sidebar (hidden by default, slides from left) ===== */
    #sidebar-wrap {
      position: relative;
      width: var(--sidebar-width);
      z-index: 30;
      overflow: visible;
    }

    #filterBox {
      width: var(--sidebar-width);
      position: relative;
      transform: translateX(calc(-1 * var(--sidebar-width) + 36px)); /* show small tab (36px) */
      transition: transform .28s ease;
      background: #ffffff;
      border-radius: 8px;
      box-shadow: 0 8px 28px rgba(20,20,40,0.06);
      padding: 18px;
    }

    /* small visible tab edge */
    #sidebarTab {
      position: absolute;
      right: -36px;
      top: 40%;
      width: 36px;
      height: 96px;
      background: #0d6efd;
      color: #fff;
      display:flex;
      align-items:center;
      justify-content:center;
      border-radius: 0 6px 6px 0;
      cursor: pointer;
      box-shadow: 0 6px 18px rgba(13,110,253,0.18);
      font-size: 12px;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      font-weight: 700;
    }

    /* slide fully visible */
    #sidebar-wrap.open #filterBox {
      transform: translateX(0);
    }

    /* Apply/Reset appear only when sidebar is hovered/open */
    .filter-buttons {
      opacity: 0;
      pointer-events: none;
      transition: .22s;
    }
    #sidebar-wrap.open .filter-buttons,
    #filterBox:hover .filter-buttons {
      opacity: 1;
      pointer-events: all;
    }

    /* brand scroll area */
    .brand-list {
      max-height: 220px;
      overflow-y: auto;
      padding-right: 6px;
    }

    /* product image sizing */
    .card-img-top {
      height: 160px;
      object-fit: cover;
    }

    /* Top brands row */
    .top-brands .btn {
      margin-right: 8px;
      margin-bottom: 8px;
    }

    /* small responsive tweaks */
    @media (max-width: 991px) {
      /* On small screens we show mobile filter button instead of sidebar */
      #sidebar-wrap { display: none; }
      .mobile-filter-wrap { display: block; margin-bottom: 16px; }
    }
    @media (min-width: 992px) {
      .mobile-filter-wrap { display: none; }
    }
  </style>
</head>
<body>

<section class="py-4">
  <div class="container-fluid">
    <!-- mobile filter button for touch devices -->
    <div class="mobile-filter-wrap d-lg-none">
      <button class="btn btn-primary" id="mobileFilterBtn">
        <i class="fa-solid fa-sliders"></i> Filter
      </button>
    </div>

    <div class="row gx-4">

      <!-- LEFT: Sidebar (hidden by default; slides out on hover) -->
      <div class="col-lg-3">
        <div id="sidebar-wrap" onmouseenter="openSidebar()" onmouseleave="closeSidebar()">
          <div id="filterBox" role="region" aria-label="Filters">
            <div id="sidebarTab" onclick="openSidebar()" title="Filter">FILTER</div>

            <!-- Filter Form -->
            <form id="filterForm" action="/products" method="GET">
              <h5 class="fw-bold mb-3">Filters</h5>

              <!-- Search -->
              <div class="mb-3">
                <label class="form-label small fw-semibold">Search</label>
                <input type="text" name="search" value="{{search}}" class="form-control" placeholder="Search products...">
              </div>

              <!-- Price -->
              <div class="mb-3">
                <label class="form-label small fw-semibold">Price Range</label>
                <div class="d-flex gap-2">
                  <input type="number" name="min" value="{{min}}" class="form-control" placeholder="Min">
                  <input type="number" name="max" value="{{max}}" class="form-control" placeholder="Max">
                </div>
              </div>

              <!-- Brands -->
              {{#if brands}}
              <div class="mb-3">
                <label class="form-label small fw-semibold">Brands</label>
                <div class="brand-list">
                  {{#each brands}}
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="brand" id="brand-{{@index}}" value="{{this}}"
                      {{#if (isBrandChecked ../selectedBrands this)}}checked{{/if}}>
                    <label class="form-check-label" for="brand-{{@index}}">{{this}}</label>
                  </div>
                  {{/each}}
                </div>
              </div>
              {{/if}}

              <!-- Apply / Reset (appear on hover or when sidebar open) -->
              <div class="filter-buttons mt-3">
                <button type="submit" class="btn btn-primary w-100 mb-2"><i class="fa-solid fa-check"></i> Apply</button>
                <a href="/products" class="btn btn-outline-secondary w-100">Reset</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- RIGHT: Products and Top Brands -->
      <div class="col-lg-9">

        <!-- TOP BRANDS (click applies instantly) -->
        {{#if brands}}
        <div class="top-brands mb-3">
          <h6 class="d-inline-block me-3 fw-bold">Top Brands</h6>
          {{#each brands}}
            <button class="btn btn-outline-dark btn-sm" onclick="applyTopBrand('{{this}}')">{{this}}</button>
          {{/each}}
        </div>
        {{/if}}

        <!-- Product grid -->
        <div class="row g-4">
          {{#if products.length}}
            {{#each products}}
              <div class="col-6 col-md-4 col-lg-3">
                <div class="card shadow-sm h-100">
                  <img src="{{#if this.resizedImages.[0]}}/rimage/{{this.resizedImages.[0]}}{{else}}/placeholder.png{{/if}}"
                       class="card-img-top" alt="{{this.name}}">
                  <div class="card-body d-flex flex-column">
                    <h6 class="fw-bold text-center">{{this.name}}</h6>
                    <p class="text-muted small text-center flex-grow-1">{{this.description}}</p>
                    <h6 class="text-success text-center fw-bold">₹{{this.price}}</h6>

                    <div class="d-flex justify-content-between mt-3">
                      <form action="/cart/add/{{this._id}}" method="POST">
                        <button class="btn btn-primary btn-sm"><i class="fa-solid fa-cart-plus"></i> Add</button>
                      </form>
                      <form action="/buy-now/{{this._id}}" method="GET">
                        <button class="btn btn-success btn-sm"><i class="fa-solid fa-bolt"></i> Buy</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <div class="col-12">
              <div class="alert alert-info">No products found for the selected filters.</div>
            </div>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
</section>

<!-- Mobile Filter Panel (for small screens) -->
<div id="mobileOverlay" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,0.45); z-index:40"></div>
<div id="mobilePanel" style="display:none; position:fixed; left:0; top:0; bottom:0; width:320px; background:#fff; z-index:41; padding:18px; overflow:auto;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Filters</h5>
    <button class="btn btn-sm btn-light" onclick="closeMobilePanel()">✖</button>
  </div>
  <!-- duplicate filter form for mobile -->
  <form id="mobileFilterForm" action="/products" method="GET">
    <div class="mb-3">
      <label class="form-label small fw-semibold">Search</label>
      <input name="search" value="{{search}}" class="form-control" placeholder="Search products...">
    </div>
    <div class="mb-3">
      <label class="form-label small fw-semibold">Price</label>
      <div class="d-flex gap-2">
        <input name="min" value="{{min}}" class="form-control" type="number" placeholder="Min">
        <input name="max" value="{{max}}" class="form-control" type="number" placeholder="Max">
      </div>
    </div>

    {{#if brands}}
    <div class="mb-3">
      <label class="form-label small fw-semibold">Brands</label>
      <div style="max-height:300px; overflow:auto; padding-right:6px;">
        {{#each brands}}
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="brand" value="{{this}}"
                 {{#if (isBrandChecked ../selectedBrands this)}}checked{{/if}}>
          <label class="form-check-label">{{this}}</label>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}

    <button class="btn btn-primary w-100 mb-2">Apply</button>
    <a href="/products" class="btn btn-outline-secondary w-100">Reset</a>
  </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Sidebar hover open/close
  const sidebarWrap = document.getElementById('sidebar-wrap');

  function openSidebar(){
    sidebarWrap && sidebarWrap.classList.add('open');
  }
  function closeSidebar(){
    sidebarWrap && sidebarWrap.classList.remove('open');
  }

  // Top Brand apply function: preserves current search/min/max values and navigates
  function applyTopBrand(brand){
    // read current search/min/max from visible form if present (desktop)
    const searchInput = document.querySelector('#filterForm input[name="search"]') || document.querySelector('#mobileFilterForm input[name="search"]');
    const minInput = document.querySelector('#filterForm input[name="min"]') || document.querySelector('#mobileFilterForm input[name="min"]');
    const maxInput = document.querySelector('#filterForm input[name="max"]') || document.querySelector('#mobileFilterForm input[name="max"]');

    const params = new URLSearchParams();
    if (searchInput && searchInput.value) params.set('search', searchInput.value);
    if (minInput && minInput.value) params.set('min', minInput.value);
    if (maxInput && maxInput.value) params.set('max', maxInput.value);
    // single-brand instant apply (replace existing brand query)
    params.set('brand', brand);

    // navigate to URL
    window.location.href = window.location.pathname + '?' + params.toString();
  }

  // Mobile panel open/close
  const mobileBtn = document.getElementById('mobileFilterBtn');
  const mobilePanel = document.getElementById('mobilePanel');
  const mobileOverlay = document.getElementById('mobileOverlay');

  if (mobileBtn) {
    mobileBtn.addEventListener('click', () => {
      mobilePanel.style.display = 'block';
      mobileOverlay.style.display = 'block';
      document.body.style.overflow = 'hidden';
    });
  }
  function closeMobilePanel(){
    mobilePanel.style.display = 'none';
    mobileOverlay.style.display = 'none';
    document.body.style.overflow = '';
  }
  mobileOverlay.addEventListener('click', closeMobilePanel);

  // Optional: when user checks/unchecks brand checkboxes on desktop, we keep behavior requiring Apply.
  // (Top brand buttons apply instantly as requested.)
</script>