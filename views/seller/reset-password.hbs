<div class="container py-5">
  <h2>Reset Password</h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}

  <form action="/seller/reset-password/{{token}}" method="POST">
    <div class="mb-3">
      <label>New Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Confirm Password</label>
      <input type="password" name="confirmPassword" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Reset Password</button>
  </form>
</div>
<style>
  body {
    font-family: 'Montserrat', sans-serif;
    background: #f0f4f8;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
  }

  .container {
    background: #fff;
    padding: 40px 30px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    animation: fadeIn 0.8s ease-in-out;
  }

  h2 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .form-control {
    border-radius: 8px;
    padding: 10px 12px;
    border: 1px solid #ccc;
    transition: 0.3s;
  }

  .form-control:focus {
    border-color: #28a745;
    box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.2);
    outline: none;
  }

  label {
    font-weight: 500;
    margin-bottom: 6px;
    display: block;
    color: #555;
  }

  .btn-success {
    width: 100%;
    padding: 10px;
    font-weight: 500;
    border-radius: 8px;
    transition: 0.3s;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .alert {
    padding: 10px 15px;
    border-radius: 8px;
    font-size: 0.9rem;
    margin-bottom: 20px;
  }

  .alert-danger {
    background-color: #f8d7da;
    color: #842029;
  }

  .alert-success {
    background-color: #d1e7dd;
    color: #0f5132;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px);}
    to { opacity: 1; transform: translateY(0);}
  }
</style>

