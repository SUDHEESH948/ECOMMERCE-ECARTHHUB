
  <title>Seller Settings</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f5f6fa;
    }
    .card {
      max-width: 600px;
      margin: 50px auto;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    .logo-preview {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #007bff;
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="card text-center">
    <h2 class="mb-4">Seller Settings</h2>

    <!-- Logo Preview -->
    <img 
      id="logoPreview" 
      class="logo-preview" 
      src="{{#if seller.logo}}/uploads/{{seller.logo}}{{else}}https://via.placeholder.com/120{{/if}}" 
      alt="Seller Logo">

    <!-- Edit Form -->
    <form action="/seller/edit" method="POST" enctype="multipart/form-data" class="mt-4 text-start">
      <div class="mb-3">
        <label for="sellerName" class="form-label">Name</label>
        <input type="text" class="form-control" id="sellerName" name="name" value="{{seller.name}}" required>
      </div>

      <div class="mb-3">
        <label for="sellerEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="sellerEmail" name="email" value="{{seller.email}}" required>
      </div>

      <div class="mb-3">
        <label for="sellerContact" class="form-label">Contact Number</label>
        <input type="text" class="form-control" id="sellerContact" name="contactNumber" value="{{seller.contactNumber}}" required>
      </div>

      <div class="mb-3">
        <label for="sellerAddress" class="form-label">Address</label>
        <textarea class="form-control" id="sellerAddress" name="address" rows="3">{{seller.address}}</textarea>
      </div>

      <div class="mb-3">
        <label for="sellerLogo" class="form-label">Logo Upload</label>
        <input class="form-control" type="file" id="sellerLogo" name="logo" accept="image/*">
      </div>

      <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const logoInput = document.getElementById('sellerLogo');
    const logoPreview = document.getElementById('logoPreview');

    logoInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        logoPreview.src = URL.createObjectURL(file);
      }
    });

    // Optional: show success message after save
    {{#if success}}
      Swal.fire({
        icon: 'success',
        title: 'Settings Updated',
        timer: 2000,
        showConfirmButton: false
      });
    {{/if}}
  </script>
</body>
</html>